@page "{id}"
@model Landmarks.Web.Areas.Admin.Pages.Category.EditModel

<div class="container container-fluid text-center">
    <h2>@Category.lblEdit</h2>
    <form method="post">
        @Html.EditorFor(m => m.EditCategoryBindingModel)
        <button type="submit" class="btn btn-indigo">Add Category</button>
        <a asp-page="/Index" class="btn btn-light-blue">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}