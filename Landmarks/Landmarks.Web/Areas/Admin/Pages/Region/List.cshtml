@page
@using Landmarks.Web.Areas.Admin.Pages.Region
@model ListModel
@{
    ViewData["Title"] = "All Regions";
}

<div class="container container-fluid text-center">
    <h1>All Regions</h1>
    <a href="/Admin/Region/Add" class="btn btn-indigo">Add Region</a>
    <table class="table table-striped table-responsive-md btn-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Area</th>
                <th>Population</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @Html.DisplayFor(m => m.Regions)
        </tbody>
    </table>
</div>

