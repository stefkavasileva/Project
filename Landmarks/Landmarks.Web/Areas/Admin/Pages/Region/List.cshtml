@page
@model Landmarks.Web.Areas.Admin.Pages.Region.ListModel
@{
    ViewData["Title"] = "All Regions";
}
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Landmarks.Web.Areas.Admin.Pages.Region.ListModel> localizer;

<div class="container container-fluid text-center">
    <h1>@localizer["lblListRegions"]</h1>
    <a href="/Admin/Region/Add" class="btn btn-indigo">@localizer["lblAddRegion"]</a>
    <table class="table table-striped table-responsive-md btn-table">
        <thead>
        <tr>
            <th>@localizer["lblName"]</th>
            <th>@localizer["lblArea"]</th>
            <th>@localizer["lblPopulation"]</th>
            <th>@localizer["lblActions"]</th>
        </tr>
        </thead>
        <tbody>
        @Html.DisplayFor(m => m.Regions)
        </tbody>
    </table>
</div>

