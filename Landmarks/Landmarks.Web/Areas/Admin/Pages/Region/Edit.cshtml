@page "{id}"
@model Landmarks.Web.Areas.Admin.Pages.Region.EditModel
@inject IStringLocalizer<Landmarks.Web.Areas.Admin.Pages.Region.EditModel> Localizer;

@{
    ViewData["Title"] = @Localizer["lblEditRegion"];
}

<div class="container container-fluid text-center">
    <h2>@Localizer["lblEditRegion"]</h2>

    <form method="post">
        @Html.EditorFor(m => m.EditCategoryBindingModel)
        <button type="submit" class="btn btn-indigo">@Localizer["lblAddRegion"]</button>
        <a asp-page="/Index" class="btn btn-light-blue">@Localizer["btnBack"]</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
