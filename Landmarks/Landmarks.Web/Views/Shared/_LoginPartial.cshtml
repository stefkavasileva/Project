@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<link href="~/css/logoutButtonStyle.css" rel="stylesheet" />
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="float-right form-inline">
        <ul class="navbar-nav float-right">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-link">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit"  id="link-logout" >Logout</button>
            </li>
        </ul>
    </form>
}
else
{
        <a asp-area="Identity" asp-page="/Account/Register" class="nav-link" style="color:white;">Register</a>
       <a asp-area="Identity" asp-page="/Account/Login" class="nav-link" style="color:white;">Login</a>
}
